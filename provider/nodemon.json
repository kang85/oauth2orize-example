{
  "restartable": "rs",
  "ignore": [
    ".git",
    "node_modules/**/node_modules",
    "yarn.lock"
  ],
  "verbose": true,
  "execMap": {
    "js": "node app.js"
  },
  "watch": [
    ".",
    "./views",
    "./routes",
    "./db",
    "./auth",
    "./utils"
  ],
  "env": {
    "NODE_ENV": "development"
  },
  "ext": "js json ejs"
}